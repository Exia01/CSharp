@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Message</h1>
@if (Model.Count() >= 1)
{
    <table id="customers" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership </th>
                <th>Discount Rate</th>
                <th>Birthday</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    @if (customer.Birthday != null)
                    {
                        <td>@String.Format("{0:d}", customer.Birthday)</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }
                    <td><button data-customer-id="@customer.Id" class="btn btn-link js-delete">Delete</button>
                    <td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>We don't have any customers yet.</h4>
}
@section scripts{
    <script>
        $('document').ready(function () {
            $("#customers .js-delete").on("click", function () {
                let button = $(this)
                if (confirm("Are you sure you want to delete this customer?")) {
                    let id = button.attr("data-customer-id")
                    $.ajax({
                        url: `/api/customers/${id}`,
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").fadeOut();
                            setTimeout(function () { button.parents("tr").remove }, 2000);
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            alert("some error");
                        }
                    })
                }
            })
        })

    </script>

}
