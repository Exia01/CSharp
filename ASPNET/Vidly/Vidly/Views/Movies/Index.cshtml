@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Message</h1>
@if (Model.Count() >= 1)
{<p>@Html.ActionLink("Add Movie","New",null, new { @class = "btn btn-primary" })</p>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Movies</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Name</td>
            <td>Genre</td>

        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                @* Name/action/controller/id *@
                <td>@Html.ActionLink(movie.Name, "Movie", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

}
else
{
<h4>We don't have any movies yet.</h4>
}

