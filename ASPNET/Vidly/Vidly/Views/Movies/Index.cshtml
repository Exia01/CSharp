@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Message</h1>
@if (Model.Count >= 1)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Movies</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Id</td>
                <td>Name</td>

            </tr>
            @foreach (var movie in Model)
            {
                <tr>

                    <td>@movie.Id</td>
                    <td>@Html.ActionLink(movie.Name, "Index", $"Movies/Details/{movie.Id}")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>We don't have any movies yet.</h4>
}

