@model Vidly.ViewModels.MovieGenreViewModel

@{
    ViewBag.Title = "Movie Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Movies"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.AntiForgeryToken()

    <div class="py-2 form-horizontal">
        <div class="col-md-offset-2 col-md-10">
            <h2>Movie Form</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.Name)
                    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.DateReleased)
                    @Html.TextBoxFor(m => m.Movie.DateReleased, "{0:d MMM yyyy}", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.NumberInStock)
                    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.GenreId)
                    @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
                </div>
                @Html.HiddenFor(m => m.Movie.Id)
                <input type="submit" value="Update Movie" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
