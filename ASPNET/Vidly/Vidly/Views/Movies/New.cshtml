@model Vidly.ViewModels.MovieGenreViewModel

@{
    ViewBag.Title = "Movie Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("New"))
{
    @Html.AntiForgeryToken()

    <div class="py-2 form-horizontal">
        <h2>Movie Form</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.Name)
                    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.DateReleased)
                    @Html.TextBoxFor(m => m.Movie.DateReleased, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.NumberInStock)
                    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.GenreId)
                    @* Using Drop down list args in selecList are: model/nameOfProperty/propertyText then adding display text *@
                    @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
                </div>
                <input type="submit" value="Add Movie" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
